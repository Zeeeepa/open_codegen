#!/bin/bash
# Git post-checkout hook to automatically populate API repositories
# This runs after git checkout operations

echo "üîÑ Auto-populating API repositories after checkout..."

# Check if we're in the right directory
if [ ! -f "scripts/auto_populate_apis.py" ]; then
    echo "‚ö†Ô∏è  auto_populate_apis.py not found, skipping API population"
    exit 0
fi

# Run the API population script
python3 scripts/auto_populate_apis.py

if [ $? -eq 0 ]; then
    echo "‚úÖ API repositories populated successfully!"
else
    echo "‚ùå Failed to populate some API repositories"
    echo "üí° You can manually run: python3 scripts/auto_populate_apis.py"
fi
